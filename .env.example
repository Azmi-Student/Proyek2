APP_NAME=Laravel
APP_ENV=local
APP_KEY=base64:random_generated_key_here
APP_DEBUG=true
APP_URL=http://localhost

# === Database Configuration ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

# === Cache & Session Configuration ===
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# === Mail Configuration ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# === Logging Configuration ===
LOG_CHANNEL=stack
LOG_LEVEL=debug

# === Broadcast Configuration ===
BROADCAST_DRIVER=log

# === Redis Configuration ===
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_QUEUE=default

# === Third Party API Keys ===
STRIPE_KEY=your_stripe_key_here
STRIPE_SECRET=your_stripe_secret_here

# === File Storage ===
FILESYSTEM_DRIVER=local

# === Queue Configuration ===
QUEUE_CONNECTION=sync

# === Application URL ===
APP_URL=http://localhost

# === Socialite Configuration (OAuth login) ===
SOCIALITE_FACEBOOK_CLIENT_ID=your_facebook_client_id_here
SOCIALITE_FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
SOCIALITE_GOOGLE_CLIENT_ID=your_google_client_id_here
SOCIALITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# === Laravel Passport (for API Authentication) ===
PASSPORT_CLIENT_ID=passport_client_id
PASSPORT_CLIENT_SECRET=passport_client_secret

# === Environment ===
APP_ENV=local
